<script>
// Buy diving gear function
function buyDivingGear(){
  if(player.inventory.gold>=3){
    player.inventory.gold-=3;
    player.inventory.DivingGear=(player.inventory.DivingGear||0)+1;
    alert('You bought diving gear! You can now dive underwater.');
  } else {
    alert('Not enough gold to buy diving gear.');
  }
}

function canDive(){
  return (player.inventory.DivingGear||0) > 0;
}

// Underwater resources and enemies
let underwaterResources=[];
let underwaterEnemies=[];
function spawnUnderwater(){
  for(let i=0;i<5;i++){
    underwaterResources.push({x:Math.floor(Math.random()*20),y:Math.floor(Math.random()*10),type:'UnderwaterGems',collected:false});
  }
  for(let i=0;i<3;i++){
    underwaterEnemies.push({x:Math.floor(Math.random()*20),y:Math.floor(Math.random()*10),hp:20,damage:5,treasure:false});
  }
}
spawnUnderwater();

function collectUnderwater(){
  underwaterResources.forEach(r=>{
    if(!r.collected && Math.abs(r.x-player.x)<=1 && Math.abs(r.y-player.y)<=1 && canDive()){
      player.inventory.UnderwaterGems=(player.inventory.UnderwaterGems||0)+1;
      r.collected=true;
      alert('Collected an underwater gem!');
    }
  });
  underwaterEnemies.forEach(e=>{
    if(Math.abs(e.x-player.x)<=1 && Math.abs(e.y-player.y)<=1 && canDive() && e.hp>0){
      e.hp-=player.attackPower;
      alert('Attacked an underwater enemy!');
      if(e.hp<=0){
        alert('Underwater enemy defeated! They dropped a treasure!');
        player.inventory.UnderwaterTreasure=(player.inventory.UnderwaterTreasure||0)+1;
        e.treasure=true;
      } else {
        player.hp-=e.damage;
      }
    }
  });
}

// Call collectUnderwater in the main game loop or player movement logic
setInterval(collectUnderwater,500);

// Existing game code (quests, challenges, multiplayer, crafting, PvP, boats, diving, etc.) remains unchanged.
</script>
